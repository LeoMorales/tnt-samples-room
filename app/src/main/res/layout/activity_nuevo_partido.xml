<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#E9EDE4"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edit_nombre_equipo_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/big_padding"
                android:fontFamily="sans-serif-light"
                android:hint="@string/sugerencia_equipo"
                android:inputType="textAutoComplete"
                android:minHeight="@dimen/min_height"
                android:textAlignment="center"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edit_marcador_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edit_nombre_equipo_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/big_padding"
                android:enabled="false"
                android:fontFamily="sans-serif-light"
                android:hint="@string/sugerencia_equipo"
                android:inputType="textAutoComplete"
                android:minHeight="@dimen/min_height"
                android:textAlignment="center"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edit_marcador_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:textAlignment="center" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/button_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/big_padding"
        android:background="#BAA1DD"
        android:text="@string/boton_guardar"
        android:textColor="@color/buttonLabel" />

</LinearLayout>